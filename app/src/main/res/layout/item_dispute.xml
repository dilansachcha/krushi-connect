<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/natural_green_bg">

    <TextView
        android:id="@+id/tvOrderId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order ID: "
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvUserId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User ID: "
        android:textSize="14sp"
        android:textColor="@color/dark_primary_variant"/>

    <TextView
        android:id="@+id/tvIssue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Issue: "
        android:textSize="14sp"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details: "
        android:textSize="14sp"
        android:paddingBottom="8dp"
        android:textColor="#332F2F"/>

    <ImageView
        android:id="@+id/ivDisputeImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btnResolve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resolve Dispute"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"/>
</LinearLayout>
