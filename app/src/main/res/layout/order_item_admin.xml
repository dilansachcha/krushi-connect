<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/dark_primary"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tvOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID: #12345"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Paid"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvCustomerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer: John Doe"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvCustomerMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile: +94XXXXXXXXX"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvCustomerAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City: Colombo"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: Rs. 5000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvDeliveryStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery: Pickup"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnCallCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Customer"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:id="@+id/layoutOrderItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrderProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"/>

    <Spinner
        android:id="@+id/spinnerOrderStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnUpdateStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Status"
        android:layout_marginTop="8dp" />
</LinearLayout>
