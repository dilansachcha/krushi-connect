<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/dark_green"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product: Mung Beans"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvProductQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: 1 kg"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: Rs. 250"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvFarmerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farmer: Alex Pereira"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvFarmerMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile: 077555332"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvFarmerCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City: Kottawa"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnCallFarmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Farmer"
        android:layout_marginTop="4dp"/>
</LinearLayout>
